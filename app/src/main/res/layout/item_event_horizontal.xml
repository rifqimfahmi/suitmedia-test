<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_marginLeft="32dp"
                                             android:layout_marginRight="32dp"
                                             android:layout_width="match_parent"
                                             android:layout_gravity="center_horizontal"
                                             android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/eventSnap"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/event_tech_in_asia"/>

    <TextView
        android:id="@+id/eventTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:background="@color/event_item_horizontal_title_bg"
        android:padding="4dp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/eventSnap"
        app:layout_constraintLeft_toLeftOf="@+id/eventSnap"
        app:layout_constraintRight_toRightOf="@+id/eventSnap"
        tools:text="Tech in Asia"/>

</android.support.constraint.ConstraintLayout>